<?xml version="1.0" encoding="UTF-8"?>
<project name="module_starling" default="compile.module.starling">
  <dirname property="module.starling.basedir" file="${ant.file.module_starling}"/>
  
  <property name="module.jdk.home.starling" value="${jdk.home.air_24_build_180}"/>
  <property name="module.jdk.bin.starling" value="${jdk.bin.air_24_build_180}"/>
  <property name="module.jdk.classpath.starling" value="jdk.classpath.air_24_build_180"/>
  
  <property name="compiler.args.starling" value="-encoding UTF-8 -source 1.3 -target 1.3 ${compiler.args}"/>
  
  <property name="starling.output.dir" value="${module.starling.basedir}/../../_intelliJ/PraiaBingo/out/production/STARLING"/>
  <property name="starling.testoutput.dir" value="${module.starling.basedir}/../../_intelliJ/PraiaBingo/out/test/STARLING"/>
  
  <path id="starling.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="starling.module.production.classpath">
    <path refid="${module.jdk.classpath.starling}"/>
    <path refid="library.starling.classpath"/>
  </path>
  
  <path id="starling.runtime.production.module.classpath">
    <pathelement location="${starling.output.dir}"/>
    <path refid="library.starling.classpath"/>
  </path>
  
  <path id="starling.module.classpath">
    <path refid="${module.jdk.classpath.starling}"/>
    <pathelement location="${starling.output.dir}"/>
    <path refid="library.starling.classpath"/>
  </path>
  
  <path id="starling.runtime.module.classpath">
    <pathelement location="${starling.testoutput.dir}"/>
    <pathelement location="${starling.output.dir}"/>
    <path refid="library.starling.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.starling">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.starling">
    <patternset refid="excluded.from.module.starling"/>
  </patternset>
  
  <path id="starling.module.sourcepath">
    <dirset dir="${module.starling.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.starling" depends="compile.module.starling.production,compile.module.starling.tests" description="Compile module STARLING"/>
  
  <target name="compile.module.starling.production" depends="register.custom.compilers" description="Compile module STARLING; production classes">
    <mkdir dir="${starling.output.dir}"/>
    <javac2 destdir="${starling.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.starling}/javac">
      <compilerarg line="${compiler.args.starling}"/>
      <bootclasspath refid="starling.module.bootclasspath"/>
      <classpath refid="starling.module.production.classpath"/>
      <src refid="starling.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.starling"/>
    </javac2>
    
    <copy todir="${starling.output.dir}">
      <fileset dir="${module.starling.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.starling.tests" depends="register.custom.compilers,compile.module.starling.production" description="compile module STARLING; test classes" unless="skip.tests"/>
  
  <target name="clean.module.starling" description="cleanup module">
    <delete dir="${starling.output.dir}"/>
    <delete dir="${starling.testoutput.dir}"/>
  </target>
</project>